<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Brainrot Video Generator</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="container">
    <h1>Brainrot Video Generator</h1>
    
    <!-- Clip Selection -->
    <div class="selection">
      <label for="famousClip">Choose a famous clip (e.g., Joe Rogan, Military):</label>
      <select id="famousClip">
        <option value="joeRogan">Joe Rogan</option>
        <option value="military">Military Clips</option>
      </select>
    </div>
    
    <div class="selection">
      <label for="minecraftClip">Choose Minecraft Parkour Clip:</label>
      <select id="minecraftClip">
        <option value="parkour1">Parkour Clip 1</option>
        <option value="parkour2">Parkour Clip 2</option>
      </select>
    </div>

    <button id="generateBtn">Generate Split-Screen Video</button>

    <!-- Video Player -->
    <div id="videoPlayer">
      <video id="generatedVideo" width="600" controls>
        Your browser does not support the video tag.
      </video>
    </div>
  </div>

  <script src="scripts.js"></script>
</body>
</html>
